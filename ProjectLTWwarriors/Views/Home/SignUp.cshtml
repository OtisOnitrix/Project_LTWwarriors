


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng kí</title>
    <link href="~/Content/SignUp.css" rel="stylesheet" />
</head>
<body>
    <div>
        <section>
            <div class="Nen_trang">
                <div class="hop-dangky">
                    <div class="Tieu_de"> Tạo tài khoản</div>
                    <div class="Mo_ta"> Khởi đầu hành trình cùng LTW Warriors ngay hôm nay!</div>

                    <form class="form_dang_ky" method="POST" action="/Account/Register">
                        <div class="hang-input">
                            <input type="text" placeholder="Họ" class="o-nhap" />
                            <input type="text" placeholder="Ten" class="o-nhap" />
                        </div>

                        <div class="nhan">Ngày sinh</div>
                        <div class="hang-input">
                            <input type="datetime" placeholder="Ngày" class="o-nhap" />
                            <input type="datetime" placeholder="Tháng" class="o-nhap" />
                            <input type="datetime" placeholder="Năm" class="o-nhap" />
                        </div>

                        <div class="hang-input">
                            <input type="email" placeholder="Email" class="o-nhap" />
                        </div>

                        <div class="hang-input">
                            <input type="password" placeholder="Mật khẩu" class="o-nhap" />
                        </div>


                    
                    <ul class="yeu-cau">
                        <li>8-30 ký tự</li>
                        <li>Ít nhất một chữ viết thường</li>
                        <li>Ít nhất một chữ viết hoa</li>
                        <li>Ít nhất một chữ viết số</li>
                        <li>Ít nhất 1 ký tự đặc biệt (vd:!#%^%,v.v)</li>
                    </ul>

                    
                        <div class="hang-input">
                            <input type="password" placeholder="Xác nhận mật khẩu" class="o-nhap" />
                        </div>

                        <div class="hang-nut">
                            <a href="/Home/SignIn" class="nut nut-trang">Trở về</a>
                            <a href="/Home/Welcome" class="nut nut-do">Tiếp tục</a>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
